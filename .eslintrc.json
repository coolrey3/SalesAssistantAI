{
    "env": {
        "node": true,
        "es2022": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "commonjs"
    },
    "globals": {
        "cheddar": "readonly"
    },
    "rules": {
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
        "no-console": "off",
        "no-undef": "error",
        "eqeqeq": "warn",
        "no-var": "warn",
        "prefer-const": "warn",
        "no-duplicate-imports": "error",
        "no-unreachable": "error",
        "curly": "warn",
        "semi": "warn"
    },
    "overrides": [
        {
            "files": ["src/__tests__/**/*.test.js", "src/__mocks__/**/*.js"],
            "globals": {
                "describe": "readonly",
                "it": "readonly",
                "test": "readonly",
                "expect": "readonly",
                "beforeEach": "readonly",
                "afterEach": "readonly",
                "beforeAll": "readonly",
                "afterAll": "readonly",
                "vi": "readonly"
            }
        },
        {
            "files": ["src/**/*.js"],
            "parserOptions": {
                "sourceType": "module"
            }
        }
    ],
    "ignorePatterns": [
        "node_modules/",
        "out/",
        "dist/",
        ".webpack/",
        "coverage/",
        "src/assets/"
    ]
}
